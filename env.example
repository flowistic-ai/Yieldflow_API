# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost/yieldflow_db
DATABASE_URL_SYNC=postgresql://username:password@localhost/yieldflow_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Yieldflow API
VERSION=1.0.0
DESCRIPTION=Comprehensive Financial Analytics API
DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_EXPIRE_DAYS=365

# External API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FMP_API_KEY=your_financial_modeling_prep_api_key
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key
NEWS_API_KEY=your_newsapi_org_api_key
FRED_API_KEY=your_fred_api_key

# Rate Limiting
RATE_LIMIT_FREE_DAILY=100
RATE_LIMIT_FREE_MINUTE=10
RATE_LIMIT_BASIC_DAILY=1000
RATE_LIMIT_BASIC_MINUTE=60
RATE_LIMIT_PRO_DAILY=10000
RATE_LIMIT_PRO_MINUTE=300

# Caching Configuration
CACHE_TTL_HOT_DATA=3600
CACHE_TTL_ANALYTICS=86400
CACHE_TTL_CHARTS=604800
CACHE_TTL_STATIC=2592000

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_url

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000", "http://localhost:8000"]

# Email Configuration (for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Chart Generation
CHART_WIDTH=800
CHART_HEIGHT=600
CHART_DPI=100

# European Compliance
BASE_CURRENCY=EUR
SUPPORTED_CURRENCIES=["EUR", "USD", "GBP", "CHF", "SEK", "NOK", "DKK"]

# AI Model Configuration
AI_MODEL_VERSION=v2.1
AI_CONFIDENCE_THRESHOLD=0.7 